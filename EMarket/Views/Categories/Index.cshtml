@model IEnumerable<EMarket.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="~/Categories/create" class="btn btn-success">New Category</a>

</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Products Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number_of_products)
        </td>
      <td></td>
    </tr>
}

</table>
