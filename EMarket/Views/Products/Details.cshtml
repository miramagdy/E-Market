@model EMarket.Models.Product

@{
    ViewBag.Title = "Details";
}
    <div class="form-horizontal">
        <h2 style="text-align: center;
                margin-bottom: 30px;
                margin-top: 50px">
           DETAILS FOR PRODUCT
        </h2>
        <hr />
        <div class="row">
            <div class="col-2" style="float:right ; display:inline">
                <img src="@Url.Content(Model.Image)" width="100px" height="100px" />
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.Name
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.Price
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.Description
                    </div>
                </div>

            </div>

        </div>
        <p>
            <a href="@Url.Action("Edit" ,  new { id=Model.Id  } )" class="btn btn-primary">Edit <i class="fas fa-edit"></i></a>

            <a href="/products/Delete/@Model.Id" class="btn btn-danger" >Delete <i class="fas fa-trash"></i></a>

        </p>
