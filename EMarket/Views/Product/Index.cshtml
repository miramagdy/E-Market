@model emarket.ViewModels.ProductCartViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bg-light {
        background-color: #f8f9fa !important;
    }

    input, select {
        max-width: 280px;
        width: 200px;
        height: 33px;
    }
</style>


@using (@Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <div style="margin-top: 50px; ">
        Search By Category Name: @Html.TextBox("search") <input type="submit" value="Search" />
        <a class="btn btn-success" href="/Product/Create" style="margin-left:1000px; margin-bottom:20px;">ADD PRODUCT</a>
    </div>
}
<div class="album py-5" style="margin-left: -250px; margin-right: -103px;">
    <div class="container">
        <div class="row">

            @foreach (var item in Model.product)
            {
                <div class="col-lg-2 col-md-4 col-sm-6 ">
                    <div class="card" style="width: 100%; margin:50px 50px; background-color:white; border-radius:7px ;text-align:center;">

                        <a href="/Product/Details/@item.id" class="product-list-img">
                            <img src="@Url.Content(item.image)" alt="" width="130" height="130 " class="card-img-top img-responsive" style="margin-top:20px; width:auto;">
                        </a>
                        <div class="card-body">

                            <h4 class="card-title" style="margin-top:20px">
                                @Html.DisplayFor(modelitem => item.id)
                            </h4>
                            <p class="card-text" style="font-weight:bold;">
                                @Html.DisplayFor(modelitem => item.price)
                                <small>EGP</small>
                            </p>
                            <a href="/Product/AddToCart/@item.id" class="pt-2 btn btn-primary "> ADD TO CART </a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</div>
